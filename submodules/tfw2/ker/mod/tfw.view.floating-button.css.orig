div.tfw-view-floating-button {
  position: relative;
  display: inline-block;
  width: 56px;
  height: 56px;
  border-radius: 100%;
  margin: 0;
  transition: transform .3s;
  transform: scale(1);
  cursor: pointer;
  text-align: center;
  vertical-align: middle;
  transition: all .2s;
}

