uniform float uniWidth;
uniform float uniHeight;
uniform float uniX;
uniform float uniY;

attribute float attX;
attribute float attY;

varying vec2 varUV;

void main() {
  varUV = vec2( attX, attY );
  float x;
  float y;
  if( uniWidth > uniHeight ) {
    x = 2.0 * attX / uniWidth - 1.0;
  } else {

  }
  gl_Position = vec4( x, y, 0.0, 1.0 );
}
